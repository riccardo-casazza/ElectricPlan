<p style="color: green"><%= notice %></p>

<% content_for :title, "Electrical panels" %>

<div style="margin-bottom: 1rem;">
  <%= link_to "â† Back to Home", root_path %>
</div>

<h1>Electrical Panels</h1>

<div style="margin: 1.5rem 0;">
  <%= link_to "New Electrical Panel", new_electrical_panel_path, class: "button-primary" %>
</div>

<% if @new_electrical_panel %>
  <%= form_with(model: @new_electrical_panel, html: { id: dom_id(@new_electrical_panel, :form) }) do |form| %>
  <% end %>
<% end %>

<table class="crud-table">
  <thead>
    <tr>
      <th>Name</th>
      <th>Room</th>
      <th>Floor</th>
      <th>Input Max Current (A)</th>
      <th>Input Cable</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% if @new_electrical_panel %>
      <%= render "electrical_panel_row", electrical_panel: @new_electrical_panel, editing: true %>
    <% end %>

    <% @electrical_panels.each do |electrical_panel| %>
      <% is_editing = @new_electrical_panel&.persisted? && @new_electrical_panel.id == electrical_panel.id %>
      <% unless is_editing %>
        <%= render "electrical_panel_row", electrical_panel: electrical_panel, editing: false %>
      <% end %>
    <% end %>
  </tbody>
</table>

<% if @electrical_panels.empty? %>
  <p style="margin-top: 2rem; color: #666;">No electrical panels yet. Click "New Electrical Panel" to add one.</p>
<% end %>
