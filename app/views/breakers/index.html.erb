<p style="color: green"><%= notice %></p>

<% content_for :title, "Breakers" %>

<div style="margin-bottom: 1rem;">
  <%= link_to "â† Back to Home", root_path %>
</div>

<h1>Breakers</h1>

<div style="margin: 1.5rem 0;">
  <%= link_to "New Breaker", new_breaker_path, class: "button-primary" %>
</div>

<% if @new_breaker %>
  <%= form_with(model: @new_breaker, html: { id: dom_id(@new_breaker, :form) }) do |form| %>
  <% end %>
<% end %>

<table class="crud-table">
  <thead>
    <tr>
      <th>Name</th>
      <th>RCD</th>
      <th>Position</th>
      <th>Max Current (A)</th>
      <th>Description</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% if @new_breaker %>
      <%= render "breaker_row", breaker: @new_breaker, editing: true %>
    <% end %>

    <% @breakers.each do |breaker| %>
      <% is_editing = @new_breaker&.persisted? && @new_breaker.id == breaker.id %>
      <% unless is_editing %>
        <%= render "breaker_row", breaker: breaker, editing: false %>
      <% end %>
    <% end %>
  </tbody>
</table>

<% if @breakers.empty? %>
  <p style="margin-top: 2rem; color: #666;">No breakers yet. Click "New Breaker" to add one.</p>
<% end %>
