<div id="<%= dom_id item %>">
  <p>
    <strong>Name:</strong>
    <%= item.name %>
  </p>

  <p>
    <strong>Item Type:</strong>
    <%= item.item_type.name %>
  </p>

  <p>
    <strong>Room:</strong>
    <%= item.room.floor.name %> - <%= item.room.name %>
  </p>

  <p>
    <strong>Breaker:</strong>
    <%= item.breaker.name %> (RCD: <%= item.breaker.residual_current_device.name %>)
  </p>

  <p>
    <strong>Input Cable:</strong>
    <%= item.input_cable ? "#{item.input_cable.section} mmÂ²" : "N/A" %>
  </p>

  <% if item.power_watts.present? %>
    <p>
      <strong>Power:</strong>
      <%= item.power_watts %>W
    </p>
  <% end %>

</div>
