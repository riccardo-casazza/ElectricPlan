<% editing ||= false %>
<% if editing %>
  <% form_id = dom_id(residual_current_device_type, :form) %>
  <% if residual_current_device_type.errors.any? %>
    <tr>
      <td colspan="2" style="background-color: #fee; padding: 1rem;">
        <strong><%= pluralize(residual_current_device_type.errors.count, "error") %> prohibited this RCD type from being saved:</strong>
        <ul style="margin: 0.5rem 0 0 1.5rem;">
          <% residual_current_device_type.errors.each do |error| %>
            <li><%= error.full_message %></li>
          <% end %>
        </ul>
      </td>
    </tr>
  <% end %>
  <tr class="editing" id="<%= dom_id(residual_current_device_type) %>">
    <td><input type="text" name="residual_current_device_type[name]" value="<%= residual_current_device_type.name %>" form="<%= form_id %>" class="form-input" style="width: 100%; min-width: 150px;"></td>
    <td class="actions">
      <input type="submit" value="Save" form="<%= form_id %>" class="button-small button-primary">
      <%= link_to "Cancel", residual_current_device_types_path, class: "button-small button-secondary" %>
    </td>
  </tr>
<% else %>
  <tr id="<%= dom_id(residual_current_device_type) %>">
    <td><%= residual_current_device_type.name %></td>
    <td class="actions">
      <%= link_to "Edit", edit_residual_current_device_type_path(residual_current_device_type), class: "button-small button-secondary" %>
      <%= button_to "Delete", residual_current_device_type, method: :delete, class: "button-small button-danger",
          form: { data: { turbo_confirm: "Are you sure you want to delete this RCD type?" } } %>
    </td>
  </tr>
<% end %>
