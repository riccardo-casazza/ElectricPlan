<p style="color: green"><%= notice %></p>

<% content_for :title, "Residual current device types" %>

<div style="margin-bottom: 1rem;">
  <%= link_to "â† Back to Home", root_path %>
</div>

<h1>Residual Current Device Types</h1>

<div style="margin: 1.5rem 0;">
  <%= link_to "New RCD Type", new_residual_current_device_type_path, class: "button-primary" %>
</div>

<% if @new_residual_current_device_type %>
  <%= form_with(model: @new_residual_current_device_type, html: { id: dom_id(@new_residual_current_device_type, :form) }) do |form| %>
  <% end %>
<% end %>

<table class="crud-table">
  <thead>
    <tr>
      <th>Name</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% if @new_residual_current_device_type %>
      <%= render "residual_current_device_type_row", residual_current_device_type: @new_residual_current_device_type, editing: true %>
    <% end %>

    <% @residual_current_device_types.each do |residual_current_device_type| %>
      <% is_editing = @new_residual_current_device_type&.persisted? && @new_residual_current_device_type.id == residual_current_device_type.id %>
      <% unless is_editing %>
        <%= render "residual_current_device_type_row", residual_current_device_type: residual_current_device_type, editing: false %>
      <% end %>
    <% end %>
  </tbody>
</table>

<% if @residual_current_device_types.empty? %>
  <p style="margin-top: 2rem; color: #666;">No RCD types yet. Click "New RCD Type" to add one.</p>
<% end %>
