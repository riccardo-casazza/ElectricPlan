<p style="color: green"><%= notice %></p>

<% content_for :title, "Rules" %>

<div style="margin-bottom: 1rem;">
  <%= link_to "â† Back to Home", root_path %>
</div>

<h1>Compliance Rules</h1>

<div style="margin: 1.5rem 0;">
  <%= link_to "New Rule", new_rule_path, class: "button-primary" %>
</div>

<% if @new_rule %>
  <%= form_with(model: @new_rule, html: { id: dom_id(@new_rule, :form) }) do |form| %>
  <% end %>
<% end %>

<table class="crud-table">
  <thead>
    <tr>
      <th>Description</th>
      <th>Applies To</th>
      <th>Rule (YAML)</th>
      <th style="text-align: center;">Status</th>
      <th>Error Description</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% if @new_rule %>
      <%= render "rule_row", rule: @new_rule, editing: true %>
    <% end %>

    <% @rules.each do |rule| %>
      <% is_editing = @new_rule&.persisted? && @new_rule.id == rule.id %>
      <% unless is_editing %>
        <%= render "rule_row", rule: rule, editing: false %>
      <% end %>
    <% end %>
  </tbody>
</table>

<% if @rules.empty? %>
  <p style="margin-top: 2rem; color: #666;">No rules yet. Click "New Rule" to add one.</p>
<% end %>
