<%= form_with(model: cable, class: "crud-form") do |form| %>
  <% if cable.errors.any? %>
    <div class="error-messages">
      <h3><%= pluralize(cable.errors.count, "error") %> prohibited this cable from being saved:</h3>
      <ul>
        <% cable.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-field">
    <%= form.label :section, "Section (mm²)" %>
    <%= form.number_field :section, step: 0.1, class: "form-input", placeholder: "e.g., 1.5, 2.5, 6" %>
    <small style="color: #666;">Enter numeric value only (e.g., 1.5 for 1.5mm²)</small>
  </div>

  <div class="form-actions">
    <%= form.submit class: "button-primary" %>
    <%= link_to "Cancel", cables_path, class: "button-secondary" %>
  </div>
<% end %>
