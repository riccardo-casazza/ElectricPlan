<% editing ||= false %>
<% if editing %>
  <% form_id = dom_id(floor, :form) %>
  <% if floor.errors.any? %>
    <tr>
      <td colspan="3" style="background-color: #fee; padding: 1rem;">
        <strong><%= pluralize(floor.errors.count, "error") %> prohibited this floor from being saved:</strong>
        <ul style="margin: 0.5rem 0 0 1.5rem;">
          <% floor.errors.each do |error| %>
            <li><%= error.full_message %></li>
          <% end %>
        </ul>
      </td>
    </tr>
  <% end %>
  <tr class="editing" id="<%= dom_id(floor) %>">
    <td><input type="text" name="floor[name]" value="<%= floor.name %>" form="<%= form_id %>" class="form-input" style="width: 100%; min-width: 150px;"></td>
    <td><%= floor.persisted? ? floor.rooms.count : 0 %></td>
    <td class="actions">
      <input type="submit" value="Save" form="<%= form_id %>" class="button-small button-primary">
      <%= link_to "Cancel", floors_path, class: "button-small button-secondary" %>
    </td>
  </tr>
<% else %>
  <tr id="<%= dom_id(floor) %>">
    <td><%= floor.name %></td>
    <td><%= floor.rooms.count %></td>
    <td class="actions">
      <%= link_to "Edit", edit_floor_path(floor), class: "button-small button-secondary" %>
      <%= button_to "Delete", floor, method: :delete, class: "button-small button-secondary",
          form: { data: { turbo_confirm: "Are you sure you want to delete this floor and all its rooms?" } } %>
    </td>
  </tr>
<% end %>
